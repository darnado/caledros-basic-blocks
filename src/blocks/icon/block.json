{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "caledros-basic-blocks/icon",
  "title": "Icon",
  "category": "caledros-basic-blocks",
  "icon": "smiley",
  "description": "A collection of simple icons.",
  "keywords": ["icon"],
  "version": "1.0",
  "textdomain": "caledros-basic-blocks",
  "editorScript": "file:./index.js",
  "style": "file:./style-index.css",
  "attributes": {
    "icon": {
      "type": "string",
      "default": "alarm-fill"
    },
    "iconLinkEnabled": {
      "type": "boolean",
      "default": false
    },
    "iconLink": {
      "type": "string",
      "source": "attribute",
      "selector": "a",
      "attribute": "href",
      "default": "#"
    },
    "iconsSize": {
      "type": "number",
      "default": 30
    },
    "iconsColor": {
      "type": "string",
      "default": "#000000"
    },
    "iconsDarkColor": {
      "type": "string",
      "default": "#ffffff"
    }
  },
  "supports": {
    "className": false
  }
}
